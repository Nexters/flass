<p id="notice"><%= notice %></p>

<h1>Lectures</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Username</th>
      <th>Title</th>
      <th>Content</th>
      <th>Url</th>
      <th>Thumbnail url</th>
      <th>Duration</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lectures.each do |lecture| %>
      <tr>
        <td><%= lecture.user_id %></td>
        <td><%= lecture.username %></td>
        <td><%= lecture.title %></td>
        <td><%= lecture.content %></td>
        <td><%= lecture.url %></td>
        <td><%= lecture.thumbnail_url %></td>
        <td><%= lecture.duration %></td>
        <td><%= link_to 'Show', lecture %></td>
        <td><%= link_to 'Edit', edit_lecture_path(lecture) %></td>
        <td><%= link_to 'Destroy', lecture, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Lecture', new_lecture_path %>
